<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>themelexus</author>
<name>Live Theme Editor</name>	
<selectors>
	<items>
		<header>Body Content</header>
		<match>body</match>		
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>body</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
		<type>image</type>
			<label>Background Image</label>
			<selector>body</selector>
			<attrs>background-image</attrs>
		</item> 		

	 	<item>
			<type>fontsize</type>
			<label>Font-Size</label>
			<selector>body,body #page</selector>
			<attrs>font-size</attrs>
		</item>  
	</items>
 
	<items>
		<header>TopBar</header>
		<match>topbar</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#topbar</selector>
			<attrs>background-color</attrs>
		</item> 
	 	<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#topbar,#topbar .btn-dropdown span</selector>
			<attrs>color</attrs>
		</item> 
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#topbar a,#topbar .btn.btn-theme-normal</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Icon Color</label>
			<selector>#topbar .fa,#topbar .btn.btn-theme-normal .fa</selector>
			<attrs>color</attrs>
		</item>
	</items>
	
	<items>
		<header>Main Menu</header>
		<match>pav-mainnav</match>	
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>.main-menu,.main-menu.mainnav-primary, .main-menu.mainnav-v2, #pav-mainnav,#pav-mainnav .navbar-default</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>.main-menu, #pav-mainnav,#pav-mainnav .navbar-default</selector>
			<attrs>background-image</attrs>
		</item>
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>.pav-megamenu .navbar-nav > li > a</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Background sub menu</label>
			<selector>#pav-mainnav .dropdown-menu</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>image</type>
			<label>Background sub Image</label>
			<selector>#pav-mainnav .dropdown-menu</selector>
			<attrs>background-image</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color sub menu</label>
			<selector>#pav-mainnav .widget-title, #pav-mainnav .dropdown-menu</selector>
			<attrs>color</attrs>
		</item>  
		<item>
			<type>text</type>
			<label>Color link sub menu</label>
			<selector>#pav-mainnav .dropdown-menu a</selector>
			<attrs>color</attrs>
		</item>
		
	</items>

	<items>
		<header>Footer</header>
		<match>footer</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#footer, #pavo-footer-center, #powered</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#footer, #pavo-footer-center, #powered</selector>
			<attrs>background-image</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>
				#footer, #footer .inner,#footer .box .box-heading,v .box.pavgooglemap .box-heading,
				#powered, #pavo-footer-center	
			</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>#footer a, #pavo-footer-center a, #powered a</selector>
			<attrs>color</attrs>
		</item>
	</items>
</selectors>

<elements>
	<items>
		<header>Products</header>
		<match>product</match>
		<item>
			<type>text</type>
			<label>Product Name</label>
			<selector>.product-block .name a</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Color Price</label>
			<selector>.price</selector>
			<attrs>color</attrs>
		</item>  		


		<item>
			<type>text</type>
			<label>Color Price New</label>
			<selector>.price .price-new</selector>
			<attrs>color</attrs>
		</item>  		
 		<item>
			<type>text</type>
			<label>Color Price Old</label>
			<selector>.price .price-old</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Color Add To Cart</label>
			<selector>
				.btn.btn-shopping-cart span + span, .btn-outline-inverse
			</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Button Cart Bg</label>
			<selector>
				.btn.btn-shopping-cart
			</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Button border</label>
			<selector>
				.btn, .product-block .action  div
			</selector>
			<attrs>border-color</attrs>
		</item>
	</items>

</elements>
</themeeditor>
